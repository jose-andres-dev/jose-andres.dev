---
// import Button from "@components/Button";
import Button from "@components/Button/Button.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

const pageTitle = "Jose Andrés Mejías Rojas";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="root">
    <h1>{pageTitle}</h1>
    <h2>Software Engineer - Research Professor - Instructor</h2>

    <div class="buttons-container">
      <Button class="index-button" href="/blog">Blog</Button>
      <Button class="index-button" href="/about">About me</Button>
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    font-size: var(--fontSizeBig);
    text-align: center;
  }

  h2 {
    font-size: var(--fontSizeMedium);
    text-align: center;
  }

  .root {
    display: grid;
    height: 100%;
    grid-template-rows: 30% 10% 45%;
    align-items: center;
  }

  .buttons-container {
    display: flex;
    justify-content: space-around;
  }

  .buttons-container .index-button {
    width: 40%;
    padding: 3rem 0;
    font-size: 5.5rem;
  }
</style>
